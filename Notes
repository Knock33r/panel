import subprocess
import time
lastOutput = None


# Lancer le serveur Minecraft
process = subprocess.Popen(['java', '-jar', 'spigot.jar'], stdout=subprocess.PIPE, stderr=subprocess.PIPE, text=True)

while True:
    output = process.stdout.readline()  # Lire une ligne
    if output != lastOutput :
        list.append(output)
        lastOutput = output

    if output:
        print(output.strip())  # Afficher la ligne
        if "Done" in output:
            print("Le serveur Minecraft est lancé !")
            break
    time.sleep(0.1)  # Attendre un court instant pour réduire la charge CPU


